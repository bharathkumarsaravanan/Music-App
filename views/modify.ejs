<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modify</title>
    <!-- css  -->
    <link rel="stylesheet" href="/css/admin.css">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
     <!-- font awesome -->
    <script src="https://kit.fontawesome.com/9ef23986b0.js" crossorigin="anonymous"></script>
</head>
<body>
    <form action="/admin/<%=admin%>/song-list/<%=id%>/modify" method="post" enctype="multipart/form-data" class="form song-add">
        
        <div class="mb-3 row">
            <label for="songName" class="col-sm-2 col-form-label"> Song name</label>
            <div class="col-sm-10">
                <input type="text" id="songName" name="songName" value="<%= oldData.song_name %>" class="form-control form-control-lg">
            </div>        
        </div>
        
        <div class="mb-3 row">
                <label for="movieName" class="col-sm-2 col-form-label">Movie name</label>
            <div class="col-sm-10">
                <select name="movieName" id="movieName" class="form-select">

                <% for(var i = 0; i < movie.length; i++){ %>
                    <option <%= oldData.movie_id == movie[i].id ? 'selected' : '' %> value="<%= movie[i].id %>" > <%= movie[i].name %> </option>
                    <% } %>

                </select>

                <a href="/admin/<%=admin%>/song-list/<%=id%>/modify/add/movie"><i class="fa-regular fa-plus add"></i></a>
            </div>
        </div>

        <div class="mb-3 row">

                <label for="genreName" class="col-sm-2 col-form-label">Genre</label>
            <div class="col-sm-10">
                <select name="genreName" id="genreName" class="form-select">
                
                    <%for(var j = 0; j < genre.length; j++){ %>
                    <option  <%= oldData.genre_id == genre[j].id ? 'selected' : '' %> value="<%= genre[j].id %>"><%= genre[j].name %> </option>
                    <%} %>

                </select>
                <a href="/admin/<%=admin%>/song-list/<%=id%>/modify/add/genre"><i class="fa-regular fa-plus add"></i></a>
            </div>
        </div>

        <div class="mb-3 row">
            <label for="artistName" class="col-sm-2 col-form-label">Artist</label>
            <div class="col-sm-10">
                <select name="artistName" id="artistName" class="form-select">

                    <%for(var k = 0; k < artist.length; k++){ %>
                    <option  <%= oldData.artist_id == artist[k].id ? 'selected' : '' %> value="<%=artist[k].id%>"><%= artist[k].name %> </option>
                    <%} %>
                
                </select>
            <a href="/admin/<%=admin%>/song-list/<%=id%>/modify/add/artist"><i class="fa-regular fa-plus add"></i></a>
        </div>
    </div>

        <div class="mb-3">
            <label for="file" class="form-label">Select your music file</label>
            <input type="file" name="musicFIle" class="form-control">
        </div>

        <div class="mb-3">
        <label for="file2" class="form-label">Select the image for song</label>
        <input type="file" name="imageFile" class="form-control">
        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="margin-left: 47%;">Approve</button>

    </form>
</body>
</html>
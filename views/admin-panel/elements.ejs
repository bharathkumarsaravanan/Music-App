<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elements</title>
     <!-- css  -->
     <link rel="stylesheet" href="/css/admin.css">
     <!-- bootstrap -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
      <!-- font awesome -->
     <script src="https://kit.fontawesome.com/9ef23986b0.js" crossorigin="anonymous"></script>
     <!-- user graph -->
     <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script> -->

     <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body>

    <div class="header">
        <a href="/admin/<%=admin%>/dashboard" class="header-content" style="text-decoration: none; color: #CA955C;">Dashboard</a>
        <a href="/admin/<%=admin%>/userinteractions" class="header-content" style="text-decoration: none; color: #CA955C;">User Interactions</a>
        <a href="/admin/<%=admin%>/requests" class="header-content" style="text-decoration: none; color: #CA955C;">Requests</a>
        <a href="#" class="header-content" style="text-decoration: none; color: #CA955C;">Incomes</a>
        <!-- <a href="/admin/<%=admin%>/update" class="header-content" style="text-decoration: none; color: #CA955C;">Updates</a> -->

        <div class="header-content" onclick="updates()">Updates </div>
        
        <div class="content-options" style="right: 450px; top: 40px;" id="updatesMenu">
            <div id="op"><a href="/admin/<%=admin%>/subscriptionsupdate" style="text-decoration: none; color: black" >Subscriptions</a></div>
            <div id="op"><a href="/admin/<%=admin%>/songupdate" style="text-decoration: none; color: black;" >Song Updates</a></div>
        </div>

        <a href="/admin/<%=admin%>/songlist" class="header-content" style="text-decoration: none; color: #CA955C;">Song List</a>
        <div class="header-content" id="selected">Groups</div>
    </div>

    <div class="btn-group">
        <div ><button class="btn btn-lg btn-outline-light" style="width: 150px;">Movies</button></div>
        <div><button class="btn btn-lg btn-outline-light" style="width: 150px;">Genres</button></div>
        <div><button class="btn btn-lg btn-outline-light" style="width: 150px;">Artists</button></div>
    </div>
    
    <h2>Movies</h2>
    <table>
        <tr>
            <th>id</th>
            <th>Movie name</th>
        </tr>
        <%for(var i = 0; i < movie.length; i++){%>
        <tr>
            <td><%=movie[i].id%></td>
            <td><%=movie[i].name%></td>
            <td><a href="/admin/elements/movie/<%=movie[i].id%>/delete">Delete</a></td>
        </tr>
    <%}%>
    <tr><td><a href="/admin/elements/movie/add">add</a></td></tr>
    </table>

    <h2>Genres</h2>
    <table>
        <tr>
            <th>id</th>
            <th>Genre name</th>
        </tr>
        <%for(var j = 0; j < genre.length; j++){%>
        <tr>
            <td><%=genre[j].id%></td>
            <td><%=genre[j].name%></td>
            <td><a href="/admin/elements/genre/<%=genre[j].id%>/delete">Delete</a></td>
        </tr>
    <%}%>
    <tr><td><a href="/admin/elements/genre/add">add</a></td></tr>

    </table>

    <h3>Artists</h3>
    <table>
        <tr>
            <th>id</th>
            <th>name</th>
        </tr>
        <%for(var k = 0; k < artist.length; k++){%>
        <tr>
            <td><%=artist[k].id%></td>
            <td><%=artist[k].name%></td>
            <td><a href="/admin/elements/artist/<%=artist[k].id%>/delete">Delete</a></td>
        </tr>
        <%}%>
        <tr><td><a href="/admin/elements/artist/add">add</a></td></tr>

       
    </table>
    

    <script>
        var updatesMenuCount = 0;
        function updates(){
            var updatesMenu = document.querySelector('#updatesMenu');
            if(updatesMenuCount === 0){
                updatesMenu.classList.add('active')
                updatesMenuCount = 1;
            }else{
                updatesMenu.classList.remove('active')
                updatesMenuCount = 0;
            }
        }
    </script>
    
</body>
</html>
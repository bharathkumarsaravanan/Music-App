<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

        <!-- css  -->
        <link rel="stylesheet" href="/css/admin.css">
        <!-- bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
         <!-- font awesome -->
        <script src="https://kit.fontawesome.com/9ef23986b0.js" crossorigin="anonymous"></script>
        <!-- user graph -->
        <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script> -->
   
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body>
    <div class="header">
        <div class="header-content" id="selected">Dashboard</div>
        <a href="/admin/<%=admin%>/userinteractions" class="header-content" style="text-decoration: none; color: #CA955C;">User Interactions</a>
        <a href="/admin/<%=admin%>/requests" class="header-content" style="text-decoration: none; color: #CA955C;">Requests</a>
        <a href="#" class="header-content" style="text-decoration: none; color: #CA955C;">Incomes</a>
        <!-- <a href="/admin/<%=admin%>/update" class="header-content" style="text-decoration: none; color: #CA955C;">Updates</a> -->
           
        <div class="header-content" onclick="updates('updatesMenu')">Updates </div>
        
            <div class="content-options" style="right: 300px; top: 40px;" id="updatesMenu">
                <div id="op"><a href="/admin/<%=admin%>/subscriptionsupdate" style="text-decoration: none; color: black" >Subscriptions</a></div>
                <div id="op"><a href="/admin/<%=admin%>/songupdate" style="text-decoration: none; color: black;" >Song Updates</a></div>
            </div>

        <div class="header-content" onclick="updates('groupMenu')">Groups</div>
            <div class="content-options" style="right: 150px; top: 40px;" id="groupMenu">
                <div id="op"><a href="/admin/<%=admin%>/songlist" style="text-decoration: none; color: black" >Songlist</a></div>
                <div id="op"><a href="/admin/<%=admin%>/elements" style="text-decoration: none; color: black;" >Others</a></div>
            </div>

    </div>

    <div class="admin"><%=adminDet[0].name%></div>

    <div class="dashboard">
        <div>
            <h2>New users</h2>
            <h2 style="color: aliceblue;"><%=userCount.count%></h2>
        </div>
        <div>
            <h2>Pending Requests</h2>
            <h2 style="color: aliceblue;"><%=requestCount.count%></h2>
        </div>
        <div>
            <h2>Revenue</h2>
            <h2 style="color: aliceblue;"><%=subcriptionsCount%> rs</h2>
        </div>
    </div>


    <script>
        var updatesMenuCount = 0;
        function updates(menu){
            var updatesMenu = document.getElementById(menu);
            if(updatesMenuCount === 0){
                updatesMenu.classList.add('active')
                updatesMenuCount = 1;
            }else{
                updatesMenu.classList.remove('active')
                updatesMenuCount = 0;
            }
        }
    </script>

</body>
</html>
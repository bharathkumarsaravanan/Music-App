<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create new</title>
    <link rel="stylesheet" href="/css/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/9ef23986b0.js" crossorigin="anonymous"></script>
    
</head>
<body>
<div class="login-body">
    <form action="/create-new-account" method="post" enctype="multipart/form-data" class="form">
        <div class="mb-3 row" >
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-4" id="name">
              <input type="text" name="firstname" class="form-control input" id="firstname" placeholder="First Name">
            </div>
            <div class="col-sm-4">
                <input type="text" name="lastname" class="form-control input" id="lastname" placeholder="Last Name">
              </div>
        </div>

        <div class="mb-3 row" >
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-5" >
              <input type="email" name="email" class="form-control input" id="email" placeholder="abc@email.com">
            </div>
        </div>

        <div class="mb-3 row" >
            <label for="phoneno" class="col-sm-2 col-form-label">Phone no</label>
            <div class="col-sm-5" >
              <input type="text" name="phoneno" class="form-control input" id="phoneno">
            </div>
        </div>


        <div class="mb-3 row" >
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-5">
              <input type="password" name="password" class="form-control input" id="password">
            </div>
        </div>

        <div class="mb-3 row" >
            <label for="confirmPassword" class="col-sm-2 col-form-label">Confirm Password</label>
            <div class="col-sm-5" >
                <div><i class="fa-solid fa-check" id="confirmIcon"></i></div>
              <input type="password" name="confirmPassword" class="form-control input" id="confirmPassword" onkeyup="confirm()">
            </div>
        </div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-light btn-lg mb-3 btn1">Create</button>
          </div>
    </form>
</div>
    
    <script>
        function confirm(){
            var password = document.getElementById('password').value;
            var confirm = document.getElementById('confirmPassword').value;
            var confirmed = document.getElementById('confirmIcon');
            if(confirm == password){
                confirmed.classList.add('fa-solid-active');
            }else{
                confirmed.classList.remove('fa-solid-active');
            }
        }
    
    </script>

</body>
</html>